<div class="container">
  <div class="row">
    <div class="col-sm-6 centered-form">
      <form action="/listings/<%= listing._id %>" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" value="<%= listing.title %>">
        </div>
         <div class="form-group">
          <label>Address</label>
          <input type="text" name="latitude" value="<%= listing.location.coordinates[1] %>">
          <input type="text" name="longitude" value="<%= listing.location.coordinates[0] %>">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" name="price" class="form-control" value="<%= listing.price %>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" class="form-control"><%= listing.description %></textarea>
        </div>
        <div class="form-group dropdown">
          <label for="home_type">Home Type</label><br>
          <select class="selectpicker" name='home_type'>
            <option type="text" class="form-control" disabled selected><%= listing.home_type %></option>
            <% home_type.forEach((category, i) => { %>
              <option type="text" class="form-control" value="<%= category %>"><%= category %></option>
            <%  }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="size">Size</label>
          <input type="number" name="size" class="form-control" value="<%= listing.size %>">
        </div>
        <div class="form-group">
          <label for="bedrooms">Bedrooms</label>
          <input type="number" name="bedrooms" class="form-control" value="<%= listing.bedrooms %>">
        </div>
        <div class="form-group">
          <label for="bathrooms">Bathrooms</label>
          <input type="number" name="bathrooms" class="form-control" value="<%= listing.bathrooms %>">
        </div>
        <div class="form-group">
          <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCKIv36asP3gBqbOWJsq4lEtYPRx1LW-Sw"></script>
<script type="text/javascript" src="/javascripts/update.js"></script>
